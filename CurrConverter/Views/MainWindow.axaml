<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CurrConverter.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CurrConverter.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="CurrConverter">
    <StackPanel>
        <ComboBox ItemsSource="{Binding AvailableCurrencies}" SelectedItem="{Binding FromCurrency}" />
        <ComboBox ItemsSource="{Binding AvailableCurrencies}" SelectedItem="{Binding ToCurrency}" />
        <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Convert" Command="{Binding ConvertCommand}" />
        <TextBlock Text="{Binding Result}" />
    </StackPanel>


</Window>
